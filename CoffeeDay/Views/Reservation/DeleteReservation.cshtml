}
<body class="MainSection">
    <div class="mainDiv">
        <h1 id="heading">Delete Reservation</h1>
        <div class="reservForm">
            <form class="bookTable" method="post">
                <label>Name</label>
                <input asp-for="name" type="text" placeholder="Enter your Name" class="fields" />
                <span asp-validation-for="name"></span>
                <label>Table for</label>
                <input asp-for="tablefor" type="number" class="fields" />

                <label>Occasion</label>
                <input asp-for="occasion" type="text" class="fields" />

                <label>Your Email ID</label>
                <input asp-for="email" type="text" placeholder="Enter your email" class="fields" />
                <span asp-validation-for="email"></span>
                <label>Leave a message: </label>
                <textarea asp-for="message" placeholder="Write your message here..." class="fields"></textarea>
                <br />
                <button type="submit" class="fields">Delete</button>
            </form>
        </div>
    </div>
</body>